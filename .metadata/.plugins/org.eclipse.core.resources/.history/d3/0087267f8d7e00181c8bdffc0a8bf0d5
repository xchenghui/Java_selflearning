/*
 * 如何通过继承Thread来开发线程
 */


package com.x20180702;

public class Demo1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
		//创建一个Cat、对象
		Cat cat = new Cat();
		
		//启动线程--自动运行run 函数
		cat.start();
	}

}

class Cat extends Thread
{
	//重新编写run函数
	public void run()
	{
		while(true)
		{
			//休眠一秒
			1000表示1000毫秒
			Thread.sleep(1000);
			
			System.out.println("Hello, World");
			
		}
	}
}











